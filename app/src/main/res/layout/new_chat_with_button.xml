<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="100dp"
    android:maxHeight="200dp"
    >

    <TextView
        android:id="@+id/new_chat_with_button_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"

        android:layout_alignParentLeft="true"

        android:layout_alignParentTop="true"

        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_margin="20dp"

        android:layout_toStartOf="@+id/new_chat_with_button_identifier"
        android:layout_toLeftOf="@+id/new_chat_with_button_identifier"
        android:text="@string/username"

        />

    <TextView
        android:id="@+id/new_chat_with_button_identifier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"

        android:layout_marginTop="20dp"

        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"

        android:text="@string/id" />



</RelativeLayout>